@page "/admin/add-role";
@model LapTopShop.Areas.Admin.Role.CreateModel
@{
    ViewData["Title"] = "Thêm role mới";
}


<div class="container-app p-3">
    <h2>
        @ViewData["Title"]
    </h2>
    <partial name = "_StatusMessage" model="@Model.StatusMessage"></partial>

    <hr>
    <div class="row">
        <div class="col-md-6">
            <form action="" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-input">
                    <label asp-for="Input.Name" class="control-label"></label>
                    <input type="text" asp-for="Input.Name" class="form-control">    
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Tạo mới" class="btn btn-primary">

                </div>
            </form>
          
        </div>
    </div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}