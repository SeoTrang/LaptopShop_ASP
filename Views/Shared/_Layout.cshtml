@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptop Shop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/detail.css">
    @RenderSection("Styles", required: false)

</head>
<body>

    <div id="app">
        <div class="header">
            <div class="header-top">
                <div class="logo">
                    <img src="~/img/laptopneon2.png" alt="">
                </div>

                <div class="search ">
                    <div class="container mt-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Bạn tìm gì...">
                            <button class="" type="button">
                                <i class="fa-solid fa-magnifying-glass"></i> <!-- Icon from Font Awesome -->
                            </button>
                        </div>
                    </div>
                    
                    <!-- <div class="input-search">
                        <input type="text" placeholder="Bạn tìm gì....">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div> -->

                </div>

                <div class="box-right">
                    <div class="hotline">
                        <img src="./img/icon-phone.gif" alt="">
                        <span>0386640397</span>
                    </div>
    
                    <a  asp-action="Index" asp-controller="Cart" class="cart">
                        <div class="circle-grey">
                            <i class="fa-solid fa-bag-shopping"></i>
    
                        </div>
    
                        <span class="animate__animated animate__bounceOut animate__infinite ">5</span>
                    </a>
    
                    @if(!string.IsNullOrEmpty(user?.Name)){
                        <div class="account">
                        <span>
                            @(user?.Name ?? "Đăng Nhập")
                        </span>
                        <div class="circle-grey">
                            <i class="fa-solid fa-user"></i>
                        </div>

                        <div class="box-action">
                            <div class="account-action">
                                
                                <div class="">
                                    <a href="./page/UserOrder.html" class="my-order">
                                        <i class="fa-solid fa-cart-shopping"></i>
                                        Đơn hàng của tôi
                                    </a>
                                </div>
                                
                                <div class="log-out-box mt-2">
                                    <a href="/Identity/Account/Logout" class="log-out">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                        Đăng xuất
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                    }else{
                        <a href="/login" class="login">
                        <span>
                            @(user?.Name ?? "Đăng Nhập")
                        </span>
                        <div class="circle-grey">
                            <i class="fa-solid fa-user"></i>
                        </div>

                        

                    </a>
                    }
                    @* <div class="account">
                        <span>
                            @(user?.Name ?? "Đăng Nhập")
                        </span>
                        <div class="circle-grey">
                            <i class="fa-solid fa-user"></i>
                        </div>

                        <div class="box-action">
                            <div class="account-action">
                                
                                <div class="">
                                    <a href="./page/UserOrder.html" class="my-order">
                                        <i class="fa-solid fa-cart-shopping"></i>
                                        Đơn hàng của tôi
                                    </a>
                                </div>
                                
                                <div class="log-out-box mt-2">
                                    <a href="/Identity/Account/Logout" class="log-out">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                        Đăng xuất
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div> *@
                </div>
            </div>
            <div class="header-bottom mt0-auto w-100 bg-main " >
                <div class="navigate flex w-100">
                    <a asp-controller="Home" asp-action="Index" class="nav-parents">
                        <div class="img">
                            <img src="~/img//icons8-home-96 (1).png" alt="">
                        </div>
                        <span>
                            Trang Chủ
                        </span>
                    </a>
                    <a asp-controller="Product" asp-action = "Index" asp-route-status="Mới" class="nav-parents">
                        <div class="img">
                            <img src="https://laptopaz.vn/media/category/cb_e90d157ceaa8bd152905d6b420c3bd29.png" alt="">
                        </div>
                        <span>
                            Laptop Mới
                        </span>
                    </a>
                    <a asp-controller="Product" asp-action = "Index" asp-route-status="Like New" class="nav-parents">
                        <div class="img">
                            <img src="https://laptopaz.vn/media/category/cb_e90d157ceaa8bd152905d6b420c3bd29.png" alt="">
                        </div>
                        <span>
                            Laptop Like New
                        </span>
                    </a>
                    <a href="#footer" class="nav-parents">
                        <div class="img">
                            <img src="~/img/icons8-information-100.png" alt="">
                        </div>
                        <span>
                            Liên Hệ
                        </span>
                    </a>
                </div>
            </div>
        </div>

       
            @RenderBody()
        

        <div id="footer" class="footer">
            <div class="container">
                <div class="about-us">
                    <div class="img">
                        <img src="./img//laptopneon2.png" alt="">
                    </div>

                    <div class="info">
                        <div class="title">Trụ sở chính  :</div>
                        <span>Ladeco Building, 266 Doi Can Street, Ba Dinh District, Hanoi.</span>
                    </div>
                    <div class="info">
                        <div class="title">Email  :</div>
                        <span>support@sapo.vn</span>
                    </div>
                    <div class="info">
                        <div class="title">Hotline  :</div>
                        <span>0386640397</span>
                    </div>
                   
                </div>

                <div class="policy">
                    <div class="title">
                        Chính sách
                    </div>
                    <div class="item">
                        Chính sách mua hàng
                    </div>
                    <div class="item">
                        Chính sách đổi trả
                    </div>
                    <div class="item">
                        Chính sách bảo hành
                    </div>
                    <div class="item">
                        Gửi góp ý, khiếu nại
                    </div>
                </div>

                <div class="contact-us">
                    <div class="title">
                        Kết nối với chúng tôi
                    </div>
                    <div class="social">
                        <div class="item">
                            <img src="https://bizweb.dktcdn.net/100/459/533/themes/868331/assets/facebook.png?1690431449159" alt="">
                        </div>
                        <div class="item">
                            <img src="https://bizweb.dktcdn.net/100/459/533/themes/868331/assets/twitter.png?1690431449159" alt="">
                        </div>
                        <div class="item">
                            <img src="https://bizweb.dktcdn.net/100/459/533/themes/868331/assets/instagram.png?1690431449159" alt="">
                        </div>
                        <div class="item">
                            <img src="https://bizweb.dktcdn.net/100/459/533/themes/868331/assets/youtube.png?1690431449159" alt="">
                        </div>
                    </div>

                    <div class="title2">
                        Phương thức thanh toán
                    </div>
                    <div class="item2">
                        Ship Cod
                    </div>
                </div>
            </div>
